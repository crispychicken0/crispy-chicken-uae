<script>
  let currentLang = 'ar';
  const $ = (sel)=>document.querySelector(sel);
  
  // تحميل العروض مع التخزين المؤقت
  async function loadOffers(){
    try{
      const cacheKey = 'crispy_offers';
      const cached = localStorage.getItem(cacheKey);
      
      if(cached){
        const data = JSON.parse(cached);
        window.OFFERS = data;
        applyOffers();
      }
      
      const res = await fetch('/public/data/offers.json?'+Date.now(), {cache:'no-store'});
      const data = await res.json();
      window.OFFERS = data;
      localStorage.setItem(cacheKey, JSON.stringify(data));
      applyOffers();
    }catch(e){
      console.warn('Failed to load offers.json, using defaults', e);
      window.OFFERS = {
        title_ar:'🔥 عروض Crispy Chicken',
        description_ar:'خصومات رائعة على وجبات الدجاج الشهيرة!',
        title_en:"🔥 Crispy Chicken Deals",
        description_en:"Amazing discounts on our famous chicken meals!",
        discount_percent:10, min_order_aed:40,
        hotline:'600527488', mobile:'0501882206', whatsapp_e164:'+971501882206',
        social:{facebook:'#', instagram:'#', tiktok:'#', x:'#'},
        ultimate_offer: {
          title_ar: "عرض Ultimate 🔥",
          title_en: "Ultimate Offer 🔥",
          value_aed: 30,
          details_ar: "12 قطعة دجاج + 3 صلصة ثوم",
          details_en: "12 Chicken Pieces + 3 Garlic Sauces",
          days_ar: "الاثنين والثلاثاء",
          days_en: "Monday and Tuesday",
          dates_ar: "01 و 02 سبتمبر",
          dates_en: "September 1st & 2nd"
        }
      };
      applyOffers();
    }
  }
  
  function applyOffers(){
    const o = window.OFFERS;
    $('#offerTitle').textContent = currentLang==='ar' ? o.title_ar : o.title_en;
    $('#offerDesc').textContent  = currentLang==='ar' ? o.description_ar : o.description_en;
    $('#hotlineChip').href = 'tel:' + (o.hotline||'');
    $('#hotlineChip').textContent = '☎️ ' + (o.hotline||'');
    $('#waChip').href = 'https://wa.me/' + (o.whatsapp_e164||'971501882206');
    $('#callBtn').href = 'tel:' + (o.hotline||'');
    $('#waBtn').href = 'https://wa.me/' + (o.whatsapp_e164||'971501882206');
    $('#fbLink').href = o.social?.facebook || '#';
    $('#igLink').href = o.social?.instagram || '#';
    $('#ttLink').href = o.social?.tiktok || '#';
    $('#xLink').href  = o.social?.x || '#';
    
    // تحديث معلومات العرض المميز
    if (o.ultimate_offer) {
      const ultimateOffer = o.ultimate_offer;
      $('#ultimate-offer-title').textContent = currentLang==='ar' ? ultimateOffer.title_ar : ultimateOffer.title_en;
      $('#ultimate-offer-value').textContent = ultimateOffer.value_aed;
      $('#ultimate-offer-details').textContent = currentLang==='ar' ? ultimateOffer.details_ar : ultimateOffer.details_en;
      $('#ultimate-offer-days').textContent = currentLang==='ar' ? ultimateOffer.days_ar : ultimateOffer.days_en;
      $('#ultimate-offer-dates').textContent = currentLang==='ar' ? ultimateOffer.dates_ar : ultimateOffer.dates_en;
    }
    
    document.querySelectorAll('[data-i18n-ar]').forEach(el=>{
      el.textContent = currentLang==='ar' ? el.getAttribute('data-i18n-ar') : el.getAttribute('data-i18n-en');
    });
    $('#langField').value = currentLang;
    document.documentElement.lang = currentLang==='ar'?'ar':'en';
    document.documentElement.dir  = currentLang==='ar'?'rtl':'ltr';
  }
  
  function setLang(lang){ 
    currentLang = lang; 
    applyOffers();
    localStorage.setItem('crispy_lang', lang);
  }
  
  function openOrder(){
    const o = window.OFFERS;
    window.open('https://wa.me/' + (o.whatsapp_e164||'971501882206'),'_blank');
  }
  
  // تحسين العد التنازلي
  function tick(){
    const now = new Date();
    const end = new Date(); end.setHours(23,59,59,999);
    const diff = Math.max(0, end - now);
    const h = String(Math.floor(diff/3.6e6)).padStart(2,'0');
    const m = String(Math.floor(diff%3.6e6/6e4)).padStart(2,'0');
    const s = String(Math.floor(diff%6e4/1e3)).padStart(2,'0');
    $('#countdown').textContent = (currentLang==='ar'?'⏳ ينتهي العرض خلال: ':'⏳ Deal ends in: ') + `${h}:${m}:${s}`;
  }
  
  // إعداد نموذج الاتصال
  $('#contactForm').addEventListener('submit', async (e)=>{
    e.preventDefault();
    const form = e.target;
    const data = Object.fromEntries(new FormData(form).entries());
    data.lang = currentLang;
    data.email_to = (window.OFFERS && window.OFFERS.email) ? window.OFFERS.email : 'kenawe@crispychicken.rest';
    
    // إرسال البيانات
    try{
      const response = await fetch('https://formspree.io/f/your-form-id', {
        method:'POST',
        headers:{'Accept':'application/json'},
        body:JSON.stringify(data)
      });
      
      if(response.ok){
        $('#feedbackMsg').classList.remove('hidden');
        form.reset();
        setTimeout(() => $('#feedbackMsg').classList.add('hidden'), 5000);
      } else {
        throw new Error('Form submission failed');
      }
    } catch(err) {
      console.error('Form error:', err);
      alert('حدث خطأ في إرسال الرسالة. يرجى المحاولة مرة أخرى.');
    }
  });
  
  // تهيئة الموقع
  window.addEventListener('DOMContentLoaded', () => {
    const savedLang = localStorage.getItem('crispy_lang');
    if(savedLang) setLang(savedLang);
    loadOffers();
    setInterval(tick, 1000);
    tick(); // تشغيل العد التنازلي فوراً
  });
</script>
</body>
</html>
